<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/level_2_1_title_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#42a0ff"
        >

        <Button
            android:id="@+id/leve1_2_1_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:drawablePadding="1dp"
            android:drawableLeft="@drawable/ic_ab_back_holo_dark_am"
            android:text="返回"
            android:gravity="left|center_vertical"
            android:textColor="#FFFFFF"
            android:visibility="invisible"
            style="?android:attr/borderlessButtonStyle"
            />

        <TextView
            android:id="@+id/level_2_1_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="我的申请"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_gradient"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/level2_1" />

        <TextView
            android:id="@+id/level_2_1_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="level_2_1_content"
            android:textSize="18sp"
            android:background="#FFFFFF"
            android:textStyle="normal"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        >
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/overview_inspect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="巡检"
            android:gravity="center|center_horizontal"
            android:drawableTop="@drawable/inspect"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/monitor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="监测"
            android:gravity="center|center_horizontal"
            android:drawableTop="@drawable/monitor"
            style="?android:attr/borderlessButtonStyle"
            />
        <Button
            android:id="@+id/overview_appval"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="审批"
            android:gravity="center|center_horizontal"
            android:drawableTop="@drawable/appval"
            style="?android:attr/borderlessButtonStyle"
            />

    </LinearLayout>


</LinearLayout>
