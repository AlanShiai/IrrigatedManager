<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#42a0ff"
    >

    <LinearLayout
        android:id="@+id/level_2_1_title_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/leve1_2_1_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:drawablePadding="1dp"
            android:drawableLeft="@drawable/ic_ab_back_holo_dark_am"
            android:text="返回"
            android:gravity="left|center_vertical"
            android:textColor="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            />

        <TextView
            android:id="@+id/level_2_1_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="我的申请"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/level_2_1_title_layout"
        android:background="#F5F5F5"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/level2_1" />

        <TextView
            android:id="@+id/level_2_1_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="level_2_1_content"
            android:textSize="18sp"
            android:background="#FFFFFF"
            android:textStyle="normal"
            android:layout_marginTop="3dp"
            />

    </LinearLayout>

</RelativeLayout>
