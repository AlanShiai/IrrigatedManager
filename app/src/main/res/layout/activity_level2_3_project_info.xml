<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#24AAFF"
        >
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#24AAFF"
        >

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:drawablePadding="1dp"
            android:drawableLeft="@drawable/ic_ab_back_holo_dark_am"
            android:text=""
            android:gravity="left|center_vertical"
            android:textColor="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="工程信息"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="normal"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/level_2_3_projectInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                >
            </ListView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <ListView
                        android:id="@+id/level2_menu_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        >
                    </ListView>
                </LinearLayout>

            </LinearLayout>




        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        >
    </LinearLayout>

    <!-- bottom toolbar -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >

        <Button
            android:id="@+id/overview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="12sp"
            android:text="首页"
            android:gravity="center|center_horizontal"
            android:drawableTop="@drawable/a1"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/overview_inspect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="12sp"
            android:text="巡检"
            android:gravity="center|center_horizontal"
            android:drawableTop="@drawable/a2"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/monitor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="12sp"
            android:text="监测"
            android:gravity="center|center_horizontal"
            android:drawableTop="@drawable/a3"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/overview_appval"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="12sp"
            android:text="审批"
            android:gravity="center|center_horizontal"
            android:drawableTop="@drawable/a4"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/project_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="12sp"
            android:text="信息"
            android:gravity="center|center_horizontal"
            android:drawableTop="@drawable/a5_en"
            style="?android:attr/borderlessButtonStyle"
            />

    </LinearLayout>

</LinearLayout>
