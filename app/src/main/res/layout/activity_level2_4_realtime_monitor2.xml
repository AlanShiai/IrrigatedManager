<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#42a0ff"
        >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_toolbar_layout"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#42a0ff"
        >

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:drawablePadding="1dp"
            android:drawableLeft="@drawable/ic_ab_back_holo_dark_am"
            android:text=""
            android:gravity="left|center_vertical"
            android:textColor="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="实时监测"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="normal"
            />

        <Button
            android:id="@+id/select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:drawablePadding="1dp"
            android:drawableRight="@drawable/select"
            android:text=""
            android:gravity="right"
            android:textColor="#FFFFFF"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="62dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#42a0ff"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="62dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_shape"
            android:layout_marginBottom="2dp"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="闸门"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/b1"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/rain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="雨情"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/b2"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/irrigation_schedule"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="灌溉"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/b3"
                style="?android:attr/borderlessButtonStyle"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <LinearLayout
                android:id="@+id/sluice_list_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                >
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            >
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            >

            <Button
                android:id="@+id/overview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="首页"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/a1"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/overview_inspect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="巡检"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/a2"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/monitor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="监测"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/a3_en"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/overview_appval"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="审批"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/a4"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/project_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="信息"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/a5"
                style="?android:attr/borderlessButtonStyle"
                />
            <!--
            <Button
                android:id="@+id/rain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="雨情"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/line_rain"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/irrigation_schedule"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="灌溉"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/line_irrigated"
                style="?android:attr/borderlessButtonStyle"
                />
    -->
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
