<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#35B3FD"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#35B3FD"
        >

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/level_2_1_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="admin"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="normal"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="160dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/d9"
        >
    </LinearLayout>

    <!-- query_layout -->

    <LinearLayout
        android:id="@+id/query_layout"
        android:layout_marginTop="62dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00F5F5F5"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

            <ImageView
                android:id="@+id/query_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/f4"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:background="#00F5F5F5"
            >
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/f1"
                        />
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/f2"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:id="@+id/action_to_project_info"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="工程信息"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            />
                        <Space
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            />
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/right_arrow"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DCDCDC"
                        android:layout_marginTop="5dp"
                        >
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="版本更新"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            />
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/f5"
                            />
                        <Space
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            />
                        <TextView
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1.2"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/logout"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="退出登录"
                android:textSize="18sp"
                android:textColor="#35B3FD"
                android:background="#FFFFFF"
                style="?android:attr/borderlessButtonStyle"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            >
        </LinearLayout>

        <!-- bottom toolbar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            >

            <Button
                android:id="@+id/overview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="首页"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/a1"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/overview_inspect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="巡检"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/a2"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/monitor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="监测"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/a3"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/overview_appval"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="审批"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/a4"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:id="@+id/project_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="12sp"
                android:text="信息"
                android:textColor="#24AAFF"
                android:gravity="center|center_horizontal"
                android:drawableTop="@drawable/a5_en"
                style="?android:attr/borderlessButtonStyle"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
