<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCC00"
    >

    <RelativeLayout
        android:id="@+id/level_2_5_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        >

        <TextView
            android:id="@+id/level_2_5_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="level_2_5_title"
            android:textSize="30dp"
            android:textColor="#ffffff"
            />
        <ImageView
            android:id="@+id/leve1_2_5_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="7dp"
            />
        <ImageView
            android:id="@+id/leve1_2_5_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/level_2_5_title_layout"
        android:background="#F5F5F5"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/should_do_task_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="待办任务"
                />
            <Button
                android:id="@+id/have_done_task_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:background="#C0C0C0"
                android:text="已办任务"
                android:layout_marginLeft="1dp"
                />
            <Button
                android:id="@+id/start_by_me_task_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:background="#C0C0C0"
                android:text="我发起的"
                android:layout_marginLeft="1dp"
                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
